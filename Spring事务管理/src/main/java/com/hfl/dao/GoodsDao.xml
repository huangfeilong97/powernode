<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hfl.dao.GoodsDao">
    <select id="selectGoods" resultType="com.hfl.entity.Goods">
        select id,name,amount,price from goods where id=#{goodsId}
    </select>

    <update id="updateGoodsAmount">
        update goods set amount=#{amount} where id=#{id}
    </update>
</mapper>